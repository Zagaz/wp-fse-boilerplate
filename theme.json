{
     "$schema": "https://schemas.wp.org/trunk/theme.json",
     "version": 2,
     "settings": {
          "appearanceTools": true,
          "layout": {
               "contentSize": "620px",
               "wideSize": "1200px"
          },
          "spacing": {
               "units": [
                    "px",
                    "em",
                    "rem",
                    "vh",
                    "vw",
                    "%"
               ],
               "spacingSizes": [
                    {
                         "name": "1",
                         "size": "0.5rem",
                         "slug": "10"
                    },
                    {
                         "name": "2",
                         "size": "clamp(0.75rem, 0.5rem + 0.625vw, 1rem)",
                         "slug": "20"
                    },
                    {
                         "name": "3",
                         "size": "clamp(1.24rem, 1rem + 0.625vw,1.5rem)",
                         "slug": "30"
                    },
                    {
                         "name": "4",
                         "size": "clamp(1.75rem,1.5rem + 0.625vw, 2rem)",
                         "slug": "40"
                    },
                    {
                         "name": "5",
                         "size": "clamp(2.25rem, 2rem + 0.625vw, 2.5rem)",
                         "slug": "50"
                    },
                    {
                         "name": "6",
                         "size": "clamp(3rem, 2.5rem + 1.25vw, 3.5rem)",
                         "slug": "60"
                    },
                    {
                         "name": "7",
                         "size": "clamp(4rem, 3rem + 2.5vw, 3.5rem)",
                         "slug": "70"
                    }
               ]
          },
          "useRootPaddingAwareAlignments": true,
          "color": {
               "background": true,
               "custom": true,
               "defaultDuotone": true,
               "customDuotone": true,
               "customGradient": true,
               "defaultGradients": true,
               "defaultPalette": true,
               "palette": [
                    {
                         "color": "#3d5a80",
                         "name": "Main Dark",
                         "slug": "main-dark"
                    },
                    {
                         "color": "#98c1d9",
                         "name": "Main",
                         "slug": "main"
                    },
                    {
                         "color": "#e0fbfc",
                         "name": "Main Light",
                         "slug": "main-light"
                    },
                    {
                         "color": "#293241",
                         "name": "Darker",
                         "slug": "darker"
                    },
                    {
                         "color": "#ee6c4d",
                         "name": "Contrast",
                         "slug": "contrast"
                    },
                    {
                         "color": "#000000",
                         "name": "black",
                         "slug": "black"
                    },
                    {
                         "color":"#202020",
                         "name" : "Text",
                         "slug" : "text"
                    },
                    {
                         "color": "#565959",
                         "name": "Dark Grey",
                         "slug": "dark-grey"
                    },
                    {
                         "color": "#f6f7f7",
                         "name": "light",
                         "slug": "light"
                    },
                    {
                         "color": "#ffffff",
                         "name": "white",
                         "slug": "white"
                    },
                    {
                         "color": "rgba(255,255,255,0)",
                         "name": "transparent",
                         "slug": "transparent"
                    }
               ]
          },
          "typography": {
               "customFontSize": true,
               "dropCap": true,
               "fluid": true,
               "fontFamilies": [
                    {
                         "fontFamily": "-apple.system,BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif",
                         "name": "System Fonts",
                         "slug": "system-fonts"
                    },
                    {
                         "fontFamily": "Arial,Helvetica,sans-serif",
                         "name": "Arial,Helvetica,sans-serif",
                         "slug": "arial-Helvetica-sans-serif"
                    },
                    {
                         "fontFamily": "Georgia,serif",
                         "name": "Georgia,serif",
                         "slug": "georgia-serif"
                    }
               ],
               "fontSizes": [
                    {
                         "fluid": false,
                         "name": "S",
                         "size": "1rem",
                         "slug": "small"
                    },
                    {
                         "fluid": {
                              "min": "1rem",
                              "max": "1.25rem"
                         },
                         "name": "M",
                         "size": "1.25rem",
                         "slug": "medium"
                    },
                    {
                         "fluid": {
                              "min": "1.25rem",
                              "max": "1.5rem"
                         },
                         "name": "L",
                         "size": "1.5rem",
                         "slug": "large"
                    },
                    {
                         "fluid": {
                              "min": "1.5rem",
                              "max": "1.75rem"
                         },
                         "name": "XL",
                         "size": "1.75rem",
                         "slug": "x-large"
                    },
                    {
                         "fluid": {
                              "min": "1.75rem",
                              "max": "2rem"
                         },
                         "name": "XXL",
                         "size": "2rem",
                         "slug": "xx-large"
                    }
               ],
               "fontStyle": true,
               "fontWeight": true,
               "letterSpacing": true,
               "lineHeight": true,
               "textTransform": true,
               "textDecoration": true
          }
     },
     "styles": {
          "spacing": {
               "padding": {
                    "top": "0px",
                    "right": "2rem",
                    "bottom": "0px",
                    "left": "2rem"
               },
               "blockGap": "var(--wp--preset--spacing--30)"
          },
          "color": {
               "background": "var(--wp--preset--color--light)",
               "text": "var(--wp--preset--color--base)"
          }
     }
}