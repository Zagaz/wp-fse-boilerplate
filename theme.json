{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
          "appearanceTools": true,
          "layout": {
               "contentSize": "620px",
               "wideSize": "1200px"
          },
          "spacing": {
               "units": [
                    "px",
                    "em",
                    "rem",
                    "vh",
                    "vw",
                    "%"
               ]
          },
          "useRootPaddingAwareAlignments": true
     },
     "styles": {
          "spacing": {
               "padding": {
                    "top": "0px",
                    "right": "2rem",
                    "bottom": "0px",
                    "left": "2rem"
               }
          }


     }
}