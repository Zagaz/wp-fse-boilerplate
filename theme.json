{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
          "appearanceTools": true,
          "layout": {
               "contentSize": "620px",
               "wideSize": "1200px"
          },
          "spacing": {
               "units": [
                    "px",
                    "em",
                    "rem",
                    "vh",
                    "vw",
                    "%"
               ],
               "spacingSizes": [
                    {
                         "name": "1",
                         "size": "0.5rem",
                         "slug": "10"
                    },
                    {
                         "name": "2",
                         "size": "clamp(0.75rem, 0.5rem + 0.625vw, 1rem)",
                         "slug": "20"
                    },
                    {
                         "name": "3",
                         "size": "clamp(1.24rem, 1rem + 0.625vw,1.5rem)",
                         "slug": "30"
                    },
                    {
                         "name": "4",
                         "size": "clamp(1.75rem,1.5rem + 0.625vw, 2rem)",
                         "slug": "40"
                    },
                    {
                         "name": "5",
                         "size": "clamp(2.25rem, 2rem + 0.625vw, 2.5rem)",
                         "slug": "50"
                    },
                    {
                         "name": "6",
                         "size": "clamp(3rem, 2.5rem + 1.25vw, 3.5rem)",
                         "slug": "60"
                    },
                    {
                         "name": "7",
                         "size": "clamp(4rem, 3rem + 2.5vw, 3.5rem)",
                         "slug": "70"
                    }

               ]
          },
          "useRootPaddingAwareAlignments": true,
          "color": {
               "background": true,
               "custom": true,
               "defaultDuotone": true,
               "customDuotone": true,
               "customGradient": true,
               "defaultGradients": true,
               "defaultPalette": true,
               "palette": [
                    {
                         "color": "#2541d3",
                         "name": "primary",
                         "slug": "primary"
                    },
                    {
                         "color": "#16c528",
                         "name": "secondary",
                         "slug": "secondary"
                    },
                    {
                         "color": "#e01616",
                         "name": "tertiary",
                         "slug": "tertiary"
                    },
                    {
                         "color": "#ff8f0a",
                         "name": "contrast",
                         "slug": "contrast"
                    },
                    {
                         "color": "#000000",
                         "name": "black",
                         "slug": "black"
                    },
                    {
                         "color": "#1b1c1c",
                         "name": "dark",
                         "slug": "dark"
                    },
                    {
                         "color": "#565959",
                         "name": "base",
                         "slug": "base"
                    },
                    {
                         "color": "#f6f7f7",
                         "name": "light",
                         "slug": "light"
                    },
                    {
                         "color": "#ffffff",
                         "name": "white",
                         "slug": "white"
                    },
                    {
                         "color": "rgba(255,255,255,0)",
                         "name": "transparent",
                         "slug": "transparent"
                    }


               ]


          },
          "typography": {
               "customFontSize": true,
               "dropCap": true,
               "fluid": true,
               "fontFamilies": [
                    {
                         "fontFamily": "-apple.system,BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif",
                         "name": "System Fonts",
                         "slug": "system-fonts"
                    },
                    {
                         "fontFamily": "Arial,Helvetica,sans-serif",
                         "name": "Arial,Helvetica,sans-serif",
                         "slug": "arial-Helvetica-sans-serif"
                    },
                    {
                         "fontFamily": "Georgia,serif",
                         "name": "Georgia,serif",
                         "slug": "georgia-serif"
                    }
               ]
          }
     },
     "styles": {
          "spacing": {
               "padding": {
                    "top": "0px",
                    "right": "2rem",
                    "bottom": "0px",
                    "left": "2rem"
               }
          }


     }
}